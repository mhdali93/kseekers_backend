# Database Configuration - SQLite (Primary)
SQLITE_DB_PATH=data/scholar_dental.db
DB_CONN_POOL=5
DB_CONN_POOL_MAX=10
DB_ECHO=False

# Database Configuration - MySQL (For future use)
db_host=localhost
db_port=3306
db_user=user
db_password=password
mp_database=scholar_dental

# AWS S3 Configuration
aws_region=us-east-1
s3_user_access_key=YOUR_ACCESS_KEY
s3_user_access_secret=YOUR_SECRET_KEY
